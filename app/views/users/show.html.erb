<div class="row">
    <div class="col-md-4">
        <h1><%= @user.name %></h1>
        <p><%= @user.email %></p>
    </div>
    <div class="col-md-8">
        <h3>Microposts (<%= @user.microposts.count %>)</h3>

        <% if @user.microposts.any? %>
            <% @user.microposts.each do |micropost| %>
                <%= render "shared/micropost_item", micropost: micropost %>
            <% end %>
        <% else %>
            <hr>
            <p class="text-muted">Nothing to show.</p>
        <% end %>
    </div>
</div>
